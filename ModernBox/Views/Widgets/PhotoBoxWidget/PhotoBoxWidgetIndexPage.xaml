<Page
    x:Class="ModernBox.Views.Widgets.PhotoBoxWidget.PhotoBoxWidgetIndexPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ModernBox.Views.Widgets.PhotoBoxWidget"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="page"
    mc:Ignorable="d">
    <!--<Image
        VerticalAlignment="Stretch"
        Source="{Binding Path}"
        Stretch="UniformToFill" />-->
    <FlipView
        x:Name="Gallery"
        Width="{Binding ElementName=page, Path=Width}"
        Height="{Binding ElementName=page, Path=Height}"
        VerticalAlignment="Stretch"
        ItemsSource="{Binding Pictures}">
        <FlipView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <Image Source="{Binding}" Stretch="UniformToFill" />
            </DataTemplate>
        </FlipView.ItemTemplate>
    </FlipView>

</Page>
